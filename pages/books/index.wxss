.con{
	width: 100%;
	height: 1005;
	display: flex;
	flex-direction: column;
}
.header{
	width: 100%;
	height: 100rpx;
	background: #fff;
	display: flex;
	border-top: 1px solid #F5F5F5;
	border-bottom: 1px solid #F5F5F5;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	position: fixed;
	z-index: 99;
	box-shadow: 0 0 3px 0 #e3e3e3;
}
.box{
	width: 700rpx;
	height: 68rpx;
	background: #f5f5f5;
	color: #999;
	border-radius: 50px;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.box image{
	margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}

.sub-con{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background: #f5f5f5;
}
.head-img{
  width:106rpx;
  height:34rpx;
  margin-top:40rpx;
}
.books-con{
	margin-top: 10rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}
.books-con v-book{
	margin-top: 10rpx;
}